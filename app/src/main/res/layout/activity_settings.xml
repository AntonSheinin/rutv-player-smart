<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1a1a1a"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="32sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Playlist Source"
        android:textSize="20sp"
        android:textColor="#AAAAAA"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_load_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload M3U/M3U8 File"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btn_load_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Playlist URL"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• File: Playlist is stored locally\n• URL: Playlist reloads from URL on app start"
        android:textSize="14sp"
        android:textColor="#888888"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display Settings"
        android:textSize="20sp"
        android:textColor="#AAAAAA"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="32dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Show Debug Log"
            android:textSize="16sp"
            android:textColor="#FFFFFF" />

        <Switch
            android:id="@+id/switch_debug_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="← Back"
        android:textSize="16sp"
        android:padding="16dp"
        android:backgroundTint="#333333" />

</LinearLayout>
