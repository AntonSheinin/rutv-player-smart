<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <androidx.media3.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:use_controller="true"
        app:resize_mode="fit"
        app:show_shuffle_button="true"
        app:show_previous_button="true"
        app:show_next_button="true"
        app:controller_layout_id="@layout/custom_player_control" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playlist_container"
        android:layout_width="280dp"
        android:layout_height="0dp"
        android:background="#1a1a1a"
        android:elevation="10dp"
        android:focusable="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/debug_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="12dp"
        android:background="#CC000000"
        android:textColor="#00FF00"
        android:textSize="12sp"
        android:fontFamily="monospace"
        android:elevation="20dp"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:text="Debug Log"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_aspect_ratio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:background="#CC000000"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:elevation="20dp"
        android:text="FIT"
        android:minWidth="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_settings" />

    <Button
        android:id="@+id/btn_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="12dp"
        android:background="#CC000000"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:elevation="20dp"
        android:text="âš™"
        android:minWidth="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
